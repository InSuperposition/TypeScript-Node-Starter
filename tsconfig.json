{
	"compilerOptions": {
		"module": "UMD",
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"target": "ES2019",
		"noImplicitAny": true,
		"moduleResolution": "node",
		"sourceMap": true,
		"outDir": "dist",
		"baseUrl": ".",
		"paths": {
			"*": ["node_modules/*"]
		}
	},
	"include": ["src/**/*"],
	"exclude": ["src/**/*.test.ts", "**/__mocks__/**/*.ts"]
}
